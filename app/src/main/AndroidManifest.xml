<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.miko.bfaa">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BFAA"
        tools:ignore="LockedOrientationActivity">
        <activity
            android:name=".presentation.github.UserDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.BFAA.NoActionBar" />
        <activity
            android:name=".presentation.github.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.BFAA.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>